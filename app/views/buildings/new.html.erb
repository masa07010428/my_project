
<h1>情報入力</h1>
<%= form_for @building, url: "/buildings", html: { method: :post } do |f| %>
  <div class="form-group">
    <%= f.label :name, "名称" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :entirety_usege, "全体用途" %>
    <%= f.collection_select :entirety_usege, @entirety_useges, :id, :item, {prompt: "選択してください"} %>
  </div>

  <div class="form-group">
    <%= f.label :entirety_floor, "階数" %>
    <%= f.text_field :entirety_floor, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :basement_floor, "地階の有無" %>
    <%= f.select :basement_floor, [["有",1],["無",2]], {prompt: "選択してください"} %>
  </div>

  <div class="form-group">
    <%= f.label :total_area, "延べ床面積" %>
    <%= f.text_field :total_area, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :total_capacity, "総収容人員" %>
    <%= f.text_field :total_capacity, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :total_capacity, "総収容人員" %>
    <%= f.text_field :total_capacity, autofocus: true, class: 'form-control' %>
  </div>

   <div class="form-group">
    <%= f.label :fire_use, "火気使用の有無" %>
    <%= f.select :fire_use, [["有",1],["無",2]], {prompt: "選択してください"} %>
  </div>

<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.submit ("登録"), class: 'btn btn-primary btn-block' %>
<% end %>
