
<h1>建物情報入力</h1>
<%= form_for @building, url: "/buildings", html: { method: :post } do |f| %>
  <div class="form-group">
    <%= f.label :name, "名称", class:"col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address, "住所", class:"col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
      
    </div>
  </div>

  <div class="form-group">
    <%= f.label :entirety_usege, "全体用途", class:"col-sm-3 control-label"  %>
    <div class="col-sm-8">
      <%= f.collection_select :entirety_usege, @entirety_useges, :id, :category, {prompt: "選択してください"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :entirety_floor, "階数", class:"col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.select :entirety_floor, [["1階",1],["2階",2],["3階",3],["4階",4],["5階",5],["6階",6],["7階",7],["8階",8],["9階",9],["10階",10],["11階",11],["12階",12],["13階",13],["14階",14],["15階",15],["16階",16],["17階",17],["18階",18],["19階",19],["20階",20]], {prompt: "選択してください"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :basement_floor, "地階の有無", class:"col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.select :basement_floor, [["有",1],["無",2]], {prompt: "選択してください"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :total_area, "延べ床面積", class:"col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :total_area, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :total_capacity, "総収容人員", class:"col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :total_capacity, autofocus: true, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :fire_use, "火気使用の有無", class:"col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.select :fire_use, [["有",1],["無",2]], {prompt: "選択してください"} %>
    </div>
  </div>

<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.submit ("登録"), class: 'btn btn-primary btn-block' %>
<% end %>
