<header class="sticky-top">
  <div class="header">
    <nav class="navbar navbar-default navbar-expand-md navbar-light py-0 color__navi">
      <%= link_to image_tag("logo2.png"), root_path, class: 'logo', 'data-turbolinks': :false %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false">
        <span class="navbar-toggler-icon"></span>
        <span class="toggler__txt"></span>
      </button>
      <div class="navbar-collapse collapse flex-column align-items-end pb-3 pb-md-0" id="navbarContent">
        <ul class="nav__main navbar-nav order-md-2 mt-3">
          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to "Edit user",  edit_user_registration_path, class: "nav-link px-4" %></li>
            <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, data: { confirm: "ログアウトしますか？" }, class: "nav-link px-4"%></li>
          <% else%>
            <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link px-4" %></li>
            <li class="nav-item"><%= link_to "Log in", new_user_session_path, class: "nav-link px-4" %></li>
            <li class="nav-item"><%= link_to "Guest", users_guest_sign_in_path, method: :post, class: " nav-link px-4"%></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
  <div class="header-nav">
    <div class="container">
      <div class="row header-nav-box" data-turbolinks="false">
        <% if user_signed_in? %>
          <%= link_to "Home", root_path, class: "col-xs-4 col-sm-4 header-nav-btn" %>
          <%= link_to "Building", new_building_path, class: "col-xs-4 col-sm-4 header-nav-btn" %>
          <%= link_to "Search", buildings_path, class: "col-xs-4 col-sm-4 header-nav-btn" %>
        <% else %>  
          <%= link_to "Home", root_path, class: "col-xs-4 col-sm-4 header-nav-btn" %>
          <%= link_to "About", root_path( anchor: "about" ), class: "col-xs-4 col-sm-4 header-nav-btn" %>
          <%= link_to "Introduction", homes_introduction_path, class: "col-xs-4 col-sm-4 header-nav-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</header>